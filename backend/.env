# DIGIFACT Configuration (use environment variables for production)
# DO NOT commit real credentials to version control
DIGIFACT_URL=${DIGIFACT_URL}
DIGIFACT_USER=${DIGIFACT_USER}
DIGIFACT_PASS=${DIGIFACT_PASS}

# Secret key for session management (generate with: python -c "import secrets; print(secrets.token_hex(32))")
SECRET_KEY=${SECRET_KEY}

# Database paths
POS_DB_PATH=pos.db
INVENTORY_DB_PATH=pos_database.db

# Server configuration
FLASK_ENV=production
FLASK_DEBUG=false

# DTE Configuration
DTE_AMBIENTE=00
EMISOR_NIT=${EMISOR_NIT}
EMISOR_NRC=${EMISOR_NRC}
