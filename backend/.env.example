# DIGIFACT Configuration
# Get these credentials from Digifact portal
DIGIFACT_URL=https://testnucsv.digifact.com  # or https://nucsv.digifact.com for production
DIGIFACT_USER=your_digifact_user_here
DIGIFACT_PASS=your_digifact_password_here

# Secret key for session management
# Generate with: python -c "import secrets; print(secrets.token_hex(32))"
SECRET_KEY=generate_a_random_32_char_hex_string

# Database paths (relative to backend directory)
POS_DB_PATH=pos.db
INVENTORY_DB_PATH=pos_database.db

# Server configuration
FLASK_ENV=development  # or production
FLASK_DEBUG=false      # never true in production

# DTE Configuration
DTE_AMBIENTE=00        # 00=test, 01=production
EMISOR_NIT=your_company_nit
EMISOR_NRC=your_company_nrc
EMISOR_NOMBRE=Your Company Name

# Email configuration (for notifications)
MAIL_SERVER=smtp.gmail.com
MAIL_PORT=587
MAIL_USERNAME=your_email@gmail.com
MAIL_PASSWORD=your_app_password
MAIL_FROM=noreply@yourcompany.com

# Logging
LOG_LEVEL=INFO
LOG_FILE=app.log
